<UserControl
    x:Class="TomTatBenhAn_WPF.View.ControlView.Footer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TomTatBenhAn_WPF.View.ControlView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Border
        Height="35"
        VerticalAlignment="Bottom"
        Background="#F5F5F5"
        BorderBrush="#E0E0E0"
        BorderThickness="1,0,0,0">

        <DockPanel Margin="10,0">
            <!--  App name (left)  -->
            <TextBlock
                VerticalAlignment="Center"
                DockPanel.Dock="Left"
                FontSize="12"
                Foreground="#555555"
                Text="Ứng dụng: Tóm tắt bệnh án" />

            <!--  Spacer  -->
            <TextBlock
                VerticalAlignment="Center"
                DockPanel.Dock="Right"
                FontSize="12"
                Foreground="#555555"
                Text="Liên hệ: contact@zigisoft.com" />

            <!--  Center (copyright)  -->
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="12"
                Foreground="#555555"
                Text="© 2025 Zigisoft. All rights reserved." />
        </DockPanel>
    </Border>
</UserControl>
