<UserControl
    x:Class="TomTatBenhAn_WPF.View.ControlView.content"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TomTatBenhAn_WPF.View.ControlView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer Background="#FFFFFF" FocusVisualStyle="{x:Null}">

        <Grid Margin="0,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  Hành chính  -->
            <StackPanel Grid.Column="0">
                <Label
                    Margin="10,0,0,0"
                    Content="I. HÀNH CHÍNH"
                    FontSize="25"
                    FontWeight="Bold" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Tên bệnh nhân"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding PatientInfo.TenBenhNhan}" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Giới tính"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding PatientInfo.GioiTinh}" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Địa chỉ cư trú"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding PatientInfo.DiaChi}" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Số thẻ BHYT"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding PatientInfo.BHYT}" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Số căn cước/Hộ Chiếu/ Mã định danh"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding PatientInfo.CCCD}" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Vào viện ngày"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding PatientInfo.VaoVien}" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Ra viện ngày"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding PatientInfo.RaVien}" />
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBox
                    Margin="10,52,10,10"
                    materialDesign:HintAssist.Hint="Ngày sinh"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding PatientInfo.NgaySinh}" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Tuổi"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding PatientInfo.Tuoi}" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Dân tộc"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding PatientInfo.DanToc}" />

                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Số bệnh án"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding PatientInfo.SoBenhAn}" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Mã y tế"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding PatientInfo.MaYTe}" />
            </StackPanel>


            <!--  Chẩn đoán  -->
            <StackPanel Grid.Row="1" Grid.Column="0">
                <Label
                    Margin="10,0,0,0"
                    Content="II. CHẨN ĐOÁN"
                    FontSize="25"
                    FontWeight="Bold" />
                <Label
                    Margin="20,0,0,0"
                    Content="1. Chẩn đoán vào viện"
                    FontSize="16"
                    FontWeight="Bold" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Bệnh chính"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Bệnh kèm theo"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <Label
                    Margin="20,0,0,0"
                    Content="2. Chẩn đoán ra viện"
                    FontSize="16"
                    FontWeight="Bold" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Bệnh chính"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Bệnh kèm theo"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="1">
                <TextBox
                    Margin="10,82,10,10"
                    materialDesign:HintAssist.Hint="Mã ICD"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Mã ICD"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <TextBox
                    Margin="10,38,10,10"
                    materialDesign:HintAssist.Hint="Mã ICD"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Mã ICD"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
            </StackPanel>

            <!--  Tóm tắt quá trình điều trị  -->
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
                <Label
                    Margin="10,0,0,0"
                    Content="III. TÓM TẮT QUÁ TRÌNH ĐIỀU TRỊ"
                    FontSize="25"
                    FontWeight="Bold" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Lý do vào viện"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextWrapping="Wrap" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Quá trình bệnh lý và diễn biến lâm sàng (Đặc điểm khởi phát, các triệu chứng lâm sàng, diễn biến bệnh):"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextWrapping="Wrap" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Tiền sử bệnh"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextWrapping="Wrap" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Những dấu hiệu lâm sàng chính được ghi nhận"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextWrapping="Wrap" />
                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Tóm tắt kết quả xét nghiệm cận lâm sàng có giá trị chẩn đoán"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextWrapping="Wrap" />

                <!--  Phương pháp điều trị  -->
                <Label
                    Margin="10,0,0,0"
                    Content="Phương pháp điều trị"
                    FontSize="16"
                    FontWeight="Bold" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label
                        Margin="30,0,0,0"
                        VerticalAlignment="Center"
                        Content="Nội khoa: "
                        FontSize="18" />
                    <CheckBox
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        materialDesign:CheckBoxAssist.CheckBoxSize="30"
                        Content="Không"
                        FontSize="18"
                        Style="{StaticResource MaterialDesignCheckBox}" />
                    <CheckBox
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        materialDesign:CheckBoxAssist.CheckBoxSize="30"
                        Style="{StaticResource MaterialDesignCheckBox}">

                        <TextBox
                            Margin="10"
                            materialDesign:HintAssist.Hint="Có, ghi rõ"
                            materialDesign:HintAssist.IsFloating="True"
                            AcceptsReturn="True"
                            FontSize="18"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            TextWrapping="Wrap" />
                    </CheckBox>

                    <Label
                        Grid.Row="1"
                        Margin="30,0,0,0"
                        VerticalAlignment="Center"
                        Content="Phẫu thuật, thủ thuật:"
                        FontSize="18" />
                    <CheckBox
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        materialDesign:CheckBoxAssist.CheckBoxSize="30"
                        Content="Không"
                        FontSize="18"
                        Style="{StaticResource MaterialDesignCheckBox}" />
                    <CheckBox
                        Grid.Row="1"
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        materialDesign:CheckBoxAssist.CheckBoxSize="30"
                        Style="{StaticResource MaterialDesignCheckBox}">
                        <TextBox
                            Margin="10"
                            materialDesign:HintAssist.Hint="Có, ghi rõ"
                            materialDesign:HintAssist.IsFloating="True"
                            AcceptsReturn="True"
                            FontSize="18"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            TextWrapping="Wrap" />
                    </CheckBox>
                </Grid>

                <!--  Tình trạng người bệnh ra viện  -->
                <Label
                    Margin="10,0,0,0"
                    Content="Tình trạng người bệnh ra viện:"
                    FontSize="16"
                    FontWeight="Bold" />
                <Grid Margin="50,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <CheckBox
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        materialDesign:CheckBoxAssist.CheckBoxSize="30"
                        Content="Khỏi"
                        FontSize="18"
                        Style="{StaticResource MaterialDesignCheckBox}" />
                    <CheckBox
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        materialDesign:CheckBoxAssist.CheckBoxSize="30"
                        Content="Đỡ"
                        FontSize="18"
                        Style="{StaticResource MaterialDesignCheckBox}" />
                    <CheckBox
                        Grid.Row="0"
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        materialDesign:CheckBoxAssist.CheckBoxSize="30"
                        Content="Không thay đổi"
                        FontSize="17"
                        Style="{StaticResource MaterialDesignCheckBox}" />
                    <CheckBox
                        Grid.Row="0"
                        Grid.Column="3"
                        HorizontalAlignment="Left"
                        materialDesign:CheckBoxAssist.CheckBoxSize="30"
                        Content="Nặng hơn"
                        FontSize="18"
                        Style="{StaticResource MaterialDesignCheckBox}" />
                    <CheckBox
                        Grid.Row="0"
                        Grid.Column="4"
                        HorizontalAlignment="Left"
                        materialDesign:CheckBoxAssist.CheckBoxSize="30"
                        Content="Tử vong"
                        FontSize="18"
                        Style="{StaticResource MaterialDesignCheckBox}" />

                    <CheckBox
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        materialDesign:CheckBoxAssist.CheckBoxSize="30"
                        Content="Tiên lượng nặng xin về"
                        FontSize="18"
                        Style="{StaticResource MaterialDesignCheckBox}" />

                    <CheckBox
                        Grid.Row="1"
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        materialDesign:CheckBoxAssist.CheckBoxSize="30"
                        Content="Chưa xác định"
                        FontSize="18"
                        Style="{StaticResource MaterialDesignCheckBox}" />
                </Grid>

                <TextBox
                    Margin="10"
                    materialDesign:HintAssist.Hint="Hướng điều trị và các chế độ tiếp theo"
                    materialDesign:HintAssist.IsFloating="True"
                    AcceptsReturn="True"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextWrapping="Wrap" />
            </StackPanel>

        </Grid>


    </ScrollViewer>
</UserControl>
