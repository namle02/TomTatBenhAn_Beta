<UserControl
    x:Class="TomTatBenhAn_WPF.View.ControlView.content"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TomTatBenhAn_WPF.View.ControlView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="6*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  🔹 Header  -->
        <Border
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Padding="10">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Chức năng chính" />
                <StackPanel
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Ellipse
                        Width="10"
                        Height="10"
                        Margin="0,0,5,0"
                        Fill="Green" />
                    <TextBlock
                        VerticalAlignment="Center"
                        Foreground="Green"
                        Text="Đã kết nối máy chủ" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!--  🔹 Middle Left  -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            Padding="10">
            <StackPanel>
                <TextBox
                    Margin="0,0,0,10"
                    materialDesign:HintAssist.Hint="Người sử dụng"
                    materialDesign:HintAssist.IsFloating="True"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="" />

                <TextBox
                    Margin="0,0,0,10"
                    materialDesign:HintAssist.Hint="Tên bệnh nhân"
                    materialDesign:HintAssist.IsFloating="True"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="" />

                <TextBox
                    materialDesign:HintAssist.Hint="Số bệnh án"
                    materialDesign:HintAssist.IsFloating="True"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="" />
            </StackPanel>
        </Border>

        <!--  🔹 Middle Right  -->
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            Padding="10">
            <StackPanel>
                <TextBox
                    Margin="0,0,0,10"
                    materialDesign:HintAssist.Hint="Phòng ban"
                    materialDesign:HintAssist.IsFloating="True"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="" />

                <TextBox
                    Margin="0,0,0,10"
                    materialDesign:HintAssist.Hint="Số thẻ bảo hiểm y tế"
                    materialDesign:HintAssist.IsFloating="True"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="" />

                <Button
                    Width="150"
                    Height="35"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Background="#007BFF"
                    BorderThickness="0"
                    Content="Tóm tắt bệnh án"
                    FontWeight="Bold"
                    Foreground="White" />
            </StackPanel>

        </Border>

        <!--  🔹 Bottom Left  -->
        <Border
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="5"
            Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="4*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="5*" />

                </Grid.RowDefinitions>
                <Border Grid.Column="0">
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Kết quả" />

                </Border>

                <!--  Hành chính  -->
                <Border
                    Grid.Row="1"
                    Margin="5"
                    Padding="10"
                    VerticalAlignment="Top"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="6">

                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontWeight="Bold"
                            Text="Hành chính" />
                        <TextBlock>
                            <Run Foreground="SlateBlue" Text="Bệnh án số: " />
                            <Run Text="" />
                        </TextBlock>
                        <TextBlock>
                            <Run Foreground="SlateBlue" Text="Mã y tế: " />
                            <Run Text="" />
                        </TextBlock>
                        <TextBlock>
                            <Run Foreground="SlateBlue" Text="Ngày vào viện: " />
                            <Run Text="" />
                        </TextBlock>
                        <TextBlock>
                            <Run Foreground="SlateBlue" Text="Ngày ra viện: " />
                            <Run Text="" />
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!--  Chuẩn đoán vào viện  -->
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    Padding="10"
                    VerticalAlignment="Top"
                    BorderBrush="black"
                    BorderThickness="1"
                    CornerRadius="6">

                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontWeight="Bold"
                            Text="Chuẩn đoán vào viện" />
                        <TextBlock Foreground="#5C6BC0" Text="Bệnh chính:" />
                        <TextBlock Text="MÃ ICD :" />
                        <TextBlock Foreground="#5C6BC0" Text="Bệnh kèm theo:" />
                        <TextBlock Text="MÃ ICD :" />
                    </StackPanel>
                </Border>

                <!--  Chuẩn đoán ra viện  -->
                <Border
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="5"
                    Padding="10"
                    VerticalAlignment="Top"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="6">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontWeight="Bold"
                            Text="Chuẩn đoán ra viện" />
                        <TextBlock Foreground="#5C6BC0" Text="Bệnh chính:" />
                        <TextBlock Text="MÃ ICD :" />
                        <TextBlock Foreground="#5C6BC0" Text="Bệnh kèm theo:" />
                        <TextBlock Text="MÃ ICD :" />
                    </StackPanel>
                </Border>
                <Border Grid.Row="2">
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Lí do vào viện" />

                </Border>
                <!--<Lí do vào viện>-->
                <Border
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="3">
                    <TabControl>

                        <TabItem Header="Quá trình">
                            <TextBlock Margin="10" Text="This is the content of Page 1" />
                        </TabItem>


                        <TabItem Header="Tóm tắt kết quả xét nghiệm">
                            <TextBlock Margin="10" Text="This is the content of Page 2" />
                        </TabItem>


                        <TabItem Header="Phương pháp điều trị">
                            <TextBlock Margin="10" Text="This is the content of Page 3" />
                        </TabItem>

                        <TabItem Header="Tình trạng người bệnh ra viện">
                            <TextBlock Margin="10" Text="This is the content of Page 4" />
                        </TabItem>
                    </TabControl>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
