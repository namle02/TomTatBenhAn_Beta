<UserControl
    x:Class="TomTatBenhAn_WPF.View.ControlView.Sidebar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TomTatBenhAn_WPF.View.ControlView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            Padding="10"
            Background="#F7FAFC"
            CornerRadius="4">

            <StackPanel>


                <StackPanel>
                    <CheckBox Visibility="Hidden" />
                    <TextBox
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Mã y tế"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                </StackPanel>



                <StackPanel>
                    <CheckBox Visibility="Hidden" />
                    <TextBox
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Số bệnh án"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                </StackPanel>




                <StackPanel>
                    <CheckBox Visibility="Hidden" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Bác sĩ tóm tắt bệnh án"
                        materialDesign:HintAssist.IsFloating="True"
                        IsReadOnly="True"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="" />

                </StackPanel>




                <StackPanel>
                    <CheckBox Visibility="Hidden" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Nhập số báo cáo"
                        materialDesign:HintAssist.IsFloating="True"
                        IsReadOnly="True"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                </StackPanel>

                <StackPanel>
                    <CheckBox Visibility="Hidden" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Số lượt sử dụng"
                        materialDesign:HintAssist.IsFloating="True"
                        IsReadOnly="True"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                </StackPanel>
                <StackPanel Margin="0,40,0,0">
                    <Button
                        Width="150"
                        Height="35"
                        HorizontalAlignment="Center"
                        Background="#007BFF"
                        BorderThickness="0"
                        Content="Gợi ý phác đồ"
                        FontWeight="Bold"
                        Foreground="White" />
                </StackPanel>
                <StackPanel Margin="0,10,0,0">
                    <Button
                        Width="150"
                        Height="35"
                        HorizontalAlignment="Center"
                        Background="#007BFF"
                        BorderThickness="0"
                        Content="xuất file"
                        FontWeight="Bold"
                        Foreground="White" />
                </StackPanel>





            </StackPanel>

        </Border>

    </Grid>
</UserControl>
