<UserControl
    x:Class="TomTatBenhAn_WPF.View.ControlView.Sidebar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TomTatBenhAn_WPF.View.ControlView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Border
        Margin="10,5,10,10"
        Padding="12"
        VerticalAlignment="Stretch"
        Background="white"
        CornerRadius="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  PHần  FORM  -->
            <ScrollViewer>
                <StackPanel Grid.Row="0" Margin="10">

                    <!--  Các TextBox, ComboBox như cũ  -->
                    <TextBox
                        Margin="0,0,0,10"
                        materialDesign:HintAssist.Hint="Người sử dụng"
                        materialDesign:HintAssist.IsFloating="True"
                        FontSize="18"
                        IsReadOnly="True"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox
                        Margin="0,0,0,10"
                        materialDesign:HintAssist.Hint="Phòng ban"
                        materialDesign:HintAssist.IsFloating="True"
                        FontSize="18"
                        IsReadOnly="True"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding UserDepartment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox
                        Margin="0,0,0,10"
                        materialDesign:HintAssist.Hint="Số lượt sử dụng"
                        materialDesign:HintAssist.IsFloating="True"
                        FontSize="18"
                        IsReadOnly="True"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding UserUsageCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <Grid Height="56" Margin="0,0,0,10">

                        <!--  TextBox  -->
                        <TextBox
                            x:Name="BenhAnTextBox"
                            Padding="36,0,10,0"
                            materialDesign:HintAssist.Hint="Số bệnh án"
                            materialDesign:HintAssist.IsFloating="True"
                            FontSize="18"
                            IsEnabled="{Binding IsSoBenhAnChecked}"
                            Text="{Binding SoBenhAn, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.Style>
                                <Style BasedOn="{StaticResource MaterialDesignOutlinedTextBox}" TargetType="TextBox">
                                    <Style.Triggers>

                                        <DataTrigger Binding="{Binding IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox1}" Value="False">
                                            <Setter Property="Text" Value="" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!--  CheckBox  -->
                        <CheckBox
                            x:Name="MaterialDesignFilledTextBoxEnabledComboBox1"
                            Width="24"
                            Height="24"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Panel.ZIndex="1"
                            materialDesign:CheckBoxAssist.CheckBoxSize="25"
                            Background="Green"
                            BorderBrush="Black"
                            BorderThickness="1"
                            Content="✔"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            IsChecked="{Binding IsSoBenhAnChecked, Mode=TwoWay}"
                            IsThreeState="False" />
                    </Grid>


                    <Grid Height="56" Margin="0,0,0,10">
                        <TextBox
                            Padding="36,0,10,0"
                            materialDesign:HintAssist.Hint="Mã y tế"
                            materialDesign:HintAssist.IsFloating="True"
                            FontSize="18"
                            IsEnabled="{Binding IsMaYTeChecked}"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding MaYTe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <!--  CheckBox đè lên  -->
                        <CheckBox
                            x:Name="MaterialDesignFilledTextBoxEnabledComboBox2"
                            Width="22"
                            Height="22"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Panel.ZIndex="1"
                            materialDesign:CheckBoxAssist.CheckBoxSize="25"
                            Background="Green"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            FontSize="16"
                            Foreground="green"
                            IsChecked="{Binding IsMaYTeChecked, Mode=TwoWay}"
                            IsThreeState="False" />
                    </Grid>

                    <TextBox
                        Margin="0,10,0,0"
                        materialDesign:HintAssist.Hint="Bác sĩ tóm tắt bệnh án"
                        materialDesign:HintAssist.IsFloating="True"
                        FontSize="18"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding DoctorName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox
                        Margin="0,10,0,0"
                        materialDesign:HintAssist.Hint="Nhập số báo cáo"
                        materialDesign:HintAssist.IsFloating="True"
                        FontSize="18"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding ReportNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <ComboBox
                        Margin="0,10,0,0"
                        materialDesign:HintAssist.Hint="Chọn số bệnh án cần  xem"
                        FontSize="18"
                        Foreground="Black"
                        IsEnabled="{Binding IsSelectedEnable}"
                        IsReadOnly="True"
                        IsTextSearchEnabled="False"
                        ItemsSource="{Binding SoBenhAnList}"
                        SelectedItem="{Binding SelectedBenhAn}"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}" />


                </StackPanel>
            </ScrollViewer>


            <!--  PHần  BUTTON DÍNH DƯỚI  -->
            <StackPanel
                Grid.Row="1"
                Margin="20,0,20,0"
                HorizontalAlignment="Stretch"
                Orientation="Vertical">
                <Button
                    Height="45"
                    Margin="0,0,0,10"
                    Background="#2f84d0"
                    BorderThickness="0"
                    Command="{Binding FetchDataCommand}"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    IsDefault="True">
                    <Button.Style>
                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoadingData}" Value="True">
                                    <Setter Property="Content" Value="Đang tải dữ liệu..." />
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsProcessingAI}" Value="True">
                                    <Setter Property="Content" Value="Đang xử lý AI..." />
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsLoadingData}" Value="False" />
                                        <Condition Binding="{Binding IsProcessingAI}" Value="False" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Content" Value="Tóm tắt bệnh án" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button
                    Height="45"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Stretch"
                    Background="#2f84d0"
                    BorderThickness="0"
                    Command="{Binding PrintReportCommand}"
                    Content="Xuất file"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White" />

                <Button
                    Height="45"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Stretch"
                    Background="#2f84d0"
                    BorderThickness="0"
                    Command="{Binding SaveProgressCommand}"
                    Content="Lưu tiến trình"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White" />

                <Button
                    Height="45"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Stretch"
                    Background="#2f84d0"
                    BorderThickness="0"
                    Command="{Binding OpenUpdateWindowCommand}"
                    Content="Cập nhật Ứng dụng"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White" />

            </StackPanel>
        </Grid>
    </Border>


</UserControl>