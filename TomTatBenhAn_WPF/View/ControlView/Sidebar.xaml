<UserControl
    x:Class="TomTatBenhAn_WPF.View.ControlView.Sidebar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TomTatBenhAn_WPF.View.ControlView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Border
        Margin="10,5,10,10"
        Padding="12"
        VerticalAlignment="Stretch"
        Background="white"
        CornerRadius="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <!--  Form nội dung  -->
                <RowDefinition Height="Auto" />
                <!--  Button dính đáy  -->
            </Grid.RowDefinitions>

            <!--  PHẦN FORM  -->
            <StackPanel Grid.Row="0">
                <!--  Các TextBox, ComboBox như cũ  -->
                <TextBox
                    Margin="0,0,0,10"
                    materialDesign:HintAssist.Hint="Người sử dụng"
                    materialDesign:HintAssist.IsFloating="True"
                    FontSize="18"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="" />
                <TextBox
                    Margin="0,0,0,10"
                    materialDesign:HintAssist.Hint="Phòng ban"
                    materialDesign:HintAssist.IsFloating="True"
                    FontSize="18"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                <TextBox
                    Margin="0,0,0,10"
                    materialDesign:HintAssist.Hint="Số lượt sử dụng"
                    materialDesign:HintAssist.IsFloating="True"
                    FontSize="18"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                <Grid Height="56" Margin="0,0,0,10">
                    <!--  Match Material textbox height  -->
                    <!--  TextBox bên dưới  -->
                    <TextBox
                        Padding="36,0,10,0"
                        materialDesign:HintAssist.Hint="Số bệnh án"
                        materialDesign:HintAssist.IsFloating="True"
                        FontSize="18"
                        IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox1}"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                    <!--  CheckBox đè lên  -->
                    <CheckBox
                        x:Name="MaterialDesignFilledTextBoxEnabledComboBox1"
                        Width="24"
                        Height="24"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Panel.ZIndex="1"
                        materialDesign:CheckBoxAssist.CheckBoxSize="25"
                        Background="Green"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Content="✔"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        IsThreeState="False" />
                </Grid>

                <Grid Height="56" Margin="0,0,0,10">
                    <!--  Match Material textbox height  -->
                    <!--  TextBox bên dưới  -->
                    <TextBox
                        Padding="36,0,10,0"
                        materialDesign:HintAssist.Hint="Mã y tế"
                        materialDesign:HintAssist.IsFloating="True"
                        FontSize="18"
                        IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox2}"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                    <!--  CheckBox đè lên  -->
                    <CheckBox
                        x:Name="MaterialDesignFilledTextBoxEnabledComboBox2"
                        Width="22"
                        Height="22"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Panel.ZIndex="1"
                        materialDesign:CheckBoxAssist.CheckBoxSize="25"
                        Background="Green"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        FontSize="16"
                        Foreground="green"
                        IsThreeState="False" />
                </Grid>

                <TextBox
                    Margin="0,10,0,0"
                    materialDesign:HintAssist.Hint="Bác sĩ tóm tắt bệnh án"
                    materialDesign:HintAssist.IsFloating="True"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                <TextBox
                    Margin="0,10,0,0"
                    materialDesign:HintAssist.Hint="Nhập số báo cáo"
                    materialDesign:HintAssist.IsFloating="True"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <ComboBox
                    Margin="0,10,0,0"
                    materialDesign:HintAssist.Hint="Chọn số bệnh án cần xem"
                    FontSize="18"
                    ItemsSource="{Binding}"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}" />
            </StackPanel>

            <!--  PHẦN BUTTON DÍNH DƯỚI  -->
            <StackPanel
                Grid.Row="1"
                Margin="20,0,20,0"
                HorizontalAlignment="Stretch"
                Orientation="Vertical">
                <Button
                    Height="45"
                    Margin="0,0,0,10"
                    Background="#2f84d0"
                    BorderThickness="0"
                    Content="Tóm tắt bệnh án"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White" />

                <Button
                    Height="45"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Stretch"
                    Background="#2f84d0"
                    BorderThickness="0"
                    Content="Gợi ý phác đồ"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White" />

                <Button
                    Height="45"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Stretch"
                    Background="#2f84d0"
                    BorderThickness="0"
                    Content="Xuất file"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White" />


            </StackPanel>
        </Grid>
    </Border>


</UserControl>