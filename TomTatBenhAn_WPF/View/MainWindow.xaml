<Window
    x:Class="TomTatBenhAn_WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:TomTatBenhAn_WPF.View.ControlView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TomTatBenhAn_WPF"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Ứng dụng tóm tắt bệnh án"
    Width="1400"
    Height="900"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>

        <!--  HEADER  -->
        <control:Header Grid.Column="0" Grid.ColumnSpan="2" />

        <!--  SIDEBAR  -->
        <control:Sidebar
            Grid.Row="1"
            Grid.Column="0"
            DataContext="{Binding SideBarVM}" />

        <!--  CONTENT  -->
        <control:content
            Grid.Row="1"
            Grid.Column="1"
            DataContext="{Binding ContentVM}" />

        <!--  FOOTER  -->
        <control:Footer
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2" />
    </Grid>
</Window>
