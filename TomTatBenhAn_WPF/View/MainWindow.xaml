<Window
    x:Class="TomTatBenhAn_WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:TomTatBenhAn_WPF.View.ControlView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TomTatBenhAn_WPF"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="800"
    mc:Ignorable="d">


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />

            <RowDefinition Height="*" />

            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>

        <!--  HEADER  -->
        <control:Header Grid.Column="0" Grid.ColumnSpan="2" />

        <!--  CONTENT LEFT  -->
        <control:Sidebar Grid.Row="1" Grid.Column="0" />



        <!--  CONTENT RIGHT  -->
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="5" />
        <control:content Grid.Row="1" Grid.Column="1" />

        <!--  FOOTER  -->
        <Border
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Height="40">
            <control:Footer
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2" />
        </Border>
    </Grid>
</Window>
