<UserControl
    x:Class="TomTatBenhAn_WPF.View.PageView.KiemTraPhacDoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TomTatBenhAn_WPF.View.PageView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ModernCard" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="8" />
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4" />
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2f84d0" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#424242" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>

        <Style
            x:Key="ActionButton"
            BasedOn="{StaticResource MaterialDesignRaisedButton}"
            TargetType="Button">
            <Setter Property="Height" Value="36" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>

        <Style x:Key="InfoCard" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2" />
        </Style>

        <!--  Viền ô bảng: kẻ lưới bên phải và bên dưới. Padding cho dễ đọc  -->
        <Style x:Key="TableCell" TargetType="Border">
            <Setter Property="BorderBrush" Value="#DDD" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>

        <!--  Ô header: đậm hơn, có viền trên  -->
        <Style
            x:Key="HeaderCell"
            BasedOn="{StaticResource TableCell}"
            TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5" />
            <Setter Property="BorderThickness" Value="0,1,1,1" />
            <Setter Property="Padding" Value="8,6" />
        </Style>

        <!--  Hàng tiêu chí: template dùng lại  -->
        <DataTemplate x:Key="TieuChiRowTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource TableCell}">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="{Binding Stt}" />
                </Border>

                <Border Grid.Column="1" Style="{StaticResource TableCell}">
                    <TextBlock
                        FontSize="16"
                        Text="{Binding YeuCauDatDuoc}"
                        TextWrapping="Wrap" />
                </Border>

                <Border Grid.Column="2" Style="{StaticResource TableCell}">
                    <CheckBox
                        HorizontalAlignment="Center"
                        Content="Đạt"
                        FontSize="16"
                        IsChecked="{Binding Dat}"
                        IsEnabled="True" />
                </Border>

                <Border Grid.Column="3" Style="{StaticResource TableCell}">
                    <CheckBox
                        HorizontalAlignment="Center"
                        Content="Không đạt"
                        FontSize="16"
                        IsChecked="{Binding KhongDat}"
                        IsEnabled="True" />
                </Border>

                <Border Grid.Column="4" Style="{StaticResource TableCell}">
                    <CheckBox
                        HorizontalAlignment="Center"
                        Content="Không áp dụng"
                        FontSize="16"
                        IsChecked="{Binding KhongApDung}"
                        IsEnabled="True" />
                </Border>

                <Border Grid.Column="5" Style="{StaticResource TableCell}">
                    <TextBlock
                        Margin="4,0"
                        FontSize="16"
                        Text="{Binding LyDoKhongDat}"
                        TextWrapping="Wrap" />
                </Border>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid Margin="16">
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Header Section  -->
                <materialDesign:Card
                    Grid.Row="0"
                    Background="White"
                    Style="{StaticResource ModernCard}">
                    <StackPanel Margin="24,20">
                        <TextBlock Style="{StaticResource HeaderStyle}" Text="KIỂM TRA TUÂN THỦ PHÁC ĐỒ ĐIỀU TRỊ" />
                        <TextBlock
                            FontSize="14"
                            Foreground="Gray"
                            Text="Đánh giá việc tuân thủ phác đồ điều trị của bệnh nhân theo các tiêu chí đã định sẵn"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </materialDesign:Card>

                <!--  Patient Search Section  -->
                <materialDesign:Card
                    Grid.Row="1"
                    Background="White"
                    Style="{StaticResource ModernCard}">
                    <StackPanel Margin="24,20">
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Kiểm tra bệnh nhân theo số bệnh án" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Patient Search  -->
                            <TextBox
                                x:Name="SoBenhAnInput"
                                Grid.Column="0"
                                Margin="0,0,16,0"
                                materialDesign:HintAssist.Hint="Nhập số bệnh án để kiểm tra phác đồ điều trị"
                                materialDesign:HintAssist.IsFloating="True"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                FontSize="16"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding KiemTraBenhNhanCommand}">
                                        <KeyBinding.CommandParameter>
                                            <Binding ElementName="SoBenhAnInput" Path="Text" />
                                        </KeyBinding.CommandParameter>
                                    </KeyBinding>
                                </TextBox.InputBindings>
                            </TextBox>

                            <Button
                                Grid.Column="1"
                                Background="#2196F3"
                                Command="{Binding KiemTraBenhNhanCommand}"
                                CommandParameter="{Binding Text, ElementName=SoBenhAnInput}"
                                Style="{StaticResource ActionButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"
                                        Kind="Magnify" />
                                    <TextBlock Text="Kiểm tra" />
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!--  Patient Info Section  -->
                <materialDesign:Card
                    Grid.Row="2"
                    Background="White"
                    Style="{StaticResource ModernCard}">
                    <StackPanel Margin="24,20">
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Thông tin chi tiết" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <materialDesign:Card
                                Grid.Row="0"
                                Grid.Column="0"
                                Background="#E3F2FD"
                                Style="{StaticResource InfoCard}">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="Tên bệnh nhân" />
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Foreground="#2f84d0"
                                        Text="{Binding PatientData.ThongTinHanhChinh.TenBN}" />
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card
                                Grid.Row="0"
                                Grid.Column="1"
                                Background="#F3E5F5"
                                Style="{StaticResource InfoCard}">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="Giới tính / Tuổi" />
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="Medium"
                                        Foreground="#2f84d0"
                                        Text="{Binding PatientData.ThongTinHanhChinh.GioiTinh}" />
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card
                                Grid.Row="0"
                                Grid.Column="2"
                                Background="#E8F5E8"
                                Style="{StaticResource InfoCard}">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="Số bệnh án" />
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="Medium"
                                        Foreground="#2f84d0"
                                        Text="{Binding PatientData.ThongTinHanhChinh.SoBenhAn}" />
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card
                                Grid.Row="1"
                                Grid.Column="0"
                                Background="#FFF3E0"
                                Style="{StaticResource InfoCard}">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="Ngày vào viện" />
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="Medium"
                                        Foreground="#2f84d0"
                                        Text="{Binding PatientData.ThongTinHanhChinh.NgayVaoVien}" />
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card
                                Grid.Row="1"
                                Grid.Column="1"
                                Background="#FCE4EC"
                                Style="{StaticResource InfoCard}">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="Ngày ra viện" />
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="Medium"
                                        Foreground="#2f84d0"
                                        Text="{Binding PatientData.ThongTinHanhChinh.NgayRaVien}" />
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card
                                Grid.Row="1"
                                Grid.Column="2"
                                Background="#F1F8E9"
                                Style="{StaticResource InfoCard}">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="Chẩn đoán" />
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="Medium"
                                        Foreground="#2f84d0"
                                        Text="{Binding PatientData.ChanDoanICD.GetToanBoChanDoanICD}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </materialDesign:Card>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!--  Available Protocol Section  -->
                <materialDesign:Card
                    Grid.Row="3"
                    Background="White"
                    Style="{StaticResource ModernCard}"
                    Visibility="{Binding HasPhacDoList, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Margin="24,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource SectionHeaderStyle}"
                                Text="Phác đồ phù hợp" />

                            <ComboBox
                                Grid.Column="1"
                                materialDesign:HintAssist.Hint="Chọn phác đồ"
                                FontSize="16"
                                ItemsSource="{Binding DanhSachPhacDo}"
                                SelectedItem="{Binding SelectedPhacDo}"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock FontSize="14" Text="{Binding Protocol.Name}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Button
                                Grid.Column="2"
                                Background="#4CAF50"
                                Command="{Binding AddPhacDoCommand}"
                                Style="{StaticResource ActionButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"
                                        Kind="Plus" />
                                    <TextBlock Text="Thêm phác đồ" />
                                </StackPanel>
                            </Button>

                        </Grid>

                        <!--  Protocol List  -->
                        <ItemsControl Margin="0,16,0,0" ItemsSource="{Binding DanhSachPhacDoPhuHop}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <materialDesign:Card
                                        Margin="0,4"
                                        materialDesign:ElevationAssist.Elevation="Dp1"
                                        Background="#FAFAFA">
                                        <Grid Margin="16,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock
                                                    Margin="0,4,0,0"
                                                    FontSize="14"
                                                    Foreground="#2f84d0"
                                                    Text="{Binding Protocol.Name}"
                                                    TextWrapping="Wrap" />
                                                <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                                                    <materialDesign:Chip
                                                        Margin="0,0,8,0"
                                                        Background="#E1F5FE"
                                                        FontSize="12"
                                                        Foreground="#0277BD">
                                                        <materialDesign:Chip.Content>
                                                            <TextBlock Text="{Binding Protocol.Code, StringFormat='Mã ICD: {0}'}" />
                                                        </materialDesign:Chip.Content>
                                                    </materialDesign:Chip>
                                                </StackPanel>
                                            </StackPanel>
                                            <Button
                                                Grid.Column="1"
                                                Background="#FF9800"
                                                Command="{Binding DataContext.KiemTraTuanThuPhacDoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding _id}"
                                                Style="{StaticResource MaterialDesignRaisedButton}">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon
                                                        Margin="0,0,8,0"
                                                        VerticalAlignment="Center"
                                                        Kind="CheckboxMarked" />
                                                    <TextBlock Text="Đánh giá" />
                                                </StackPanel>
                                            </Button>

                                            <Button
                                                Grid.Column="2"
                                                Margin="10,0,0,0"
                                                Background="Red"
                                                Command="{Binding DataContext.RemovePhacDoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding _id}"
                                                Style="{StaticResource MaterialDesignRaisedButton}">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon
                                                        Margin="0,0,8,0"
                                                        VerticalAlignment="Center"
                                                        Kind="CheckboxMarked" />
                                                    <TextBlock Text="Xóa" />
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </materialDesign:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </materialDesign:Card>

                <!--  Evaluation Results Section  -->
                <materialDesign:Card
                    Grid.Row="4"
                    Background="White"
                    Style="{StaticResource ModernCard}"
                    Visibility="{Binding HasEvaluationResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Margin="24,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource SectionHeaderStyle}"
                                Text="Kết quả đánh giá" />
                        </Grid>

                        <!--  Detailed Results  -->
                        <ItemsControl Margin="0,16,0,0" ItemsSource="{Binding DanhSachBangKiemDaDanhGia}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <materialDesign:Card
                                        Margin="0,4"
                                        materialDesign:ElevationAssist.Elevation="Dp1"
                                        Background="#FAFAFA">
                                        <Grid Margin="16,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock
                                                    Margin="0,4,0,0"
                                                    FontSize="14"
                                                    Foreground="#2f84d0"
                                                    Text="{Binding TenBangKiem}"
                                                    TextWrapping="Wrap" />
                                                <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                                                    <materialDesign:Chip
                                                        Margin="0,0,8,0"
                                                        Background="#E1F5FE"
                                                        FontSize="12"
                                                        Foreground="#0277BD">
                                                        <materialDesign:Chip.Content>
                                                            <TextBlock Text="{Binding TenPhacDo}" />
                                                        </materialDesign:Chip.Content>
                                                    </materialDesign:Chip>
                                                </StackPanel>
                                            </StackPanel>
                                            <Button
                                                Grid.Column="1"
                                                Margin="5"
                                                Background="#FF9800"
                                                Command="{Binding DataContext.PreviewBangKiemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding BangKiemId}"
                                                Style="{StaticResource MaterialDesignRaisedButton}">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon
                                                        Margin="0,0,8,0"
                                                        VerticalAlignment="Center"
                                                        Kind="Eye" />
                                                    <TextBlock Text="Xem Trước" />
                                                </StackPanel>
                                            </Button>
                                            <Button
                                                Grid.Column="2"
                                                Margin="5"
                                                Background="CadetBlue"
                                                Command="{Binding DataContext.XuatBangKiemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding BangKiemId}"
                                                Style="{StaticResource MaterialDesignRaisedButton}">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon
                                                        Margin="0,0,8,0"
                                                        VerticalAlignment="Center"
                                                        Kind="Harddisk" />
                                                    <TextBlock Text="Xuất bảng kiểm" />
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </materialDesign:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!--  Empty State when no patient selected  -->
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding HasNoBangKiem, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <materialDesign:PackIcon
                                Width="64"
                                Height="64"
                                Margin="0,0,0,16"
                                HorizontalAlignment="Center"
                                Foreground="Gray"
                                Kind="AccountSearch" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="18"
                                Foreground="Gray"
                                Text="Chưa có bảng đánh giá" />
                            <TextBlock
                                Margin="0,8,0,0"
                                HorizontalAlignment="Center"
                                FontSize="14"
                                Foreground="Gray"
                                Text="Hãy đánh giá một phác đồ phù hợp" />
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </ScrollViewer>

        <!--  Loading Overlay  -->
        <Border
            d:Visibility="Hidden"
            Background="#80000000"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar
                        Width="50"
                        Height="50"
                        IsIndeterminate="True"
                        Style="{StaticResource MaterialDesignCircularProgressBar}" />
                    <TextBlock
                        Margin="0,16,0,0"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Foreground="White"
                        Text="Đang xử lý..." />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Preview bảng kiểm đã đánh giá  -->
        <Border
            d:Visibility="Visible"
            Background="#80000000"
            Visibility="{Binding IsViewBangKiem, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>


                <!--  Tên bảng kiểm  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="5"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#0277BD"
                    Text="{Binding BangKiemDaDanhGia.TenBangKiem}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

                <!--  Bảng hiển thị dữ liệu bảng kiểm  -->
                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled">
                    <Grid MaxWidth="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ViewportWidth}" HorizontalAlignment="Stretch">
                        <materialDesign:Card Grid.Row="1" Style="{StaticResource ModernCard}">
                            <!--  Viền ngoài khối chi tiết (góc bo nhẹ cho đẹp)  -->
                            <Border
                                Padding="12"
                                BorderBrush="#CCC"
                                BorderThickness="1"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                                <Grid>
                                    <!--  Bật đồng bộ cột giữa các hàng  -->
                                    <Grid.IsSharedSizeScope>True</Grid.IsSharedSizeScope>

                                    <ContentControl Content="{Binding BangKiemDaDanhGia}">
                                        <ContentControl.ContentTemplate>
                                            <DataTemplate>
                                                <StackPanel>

                                                    <!--  ==== ĐÁNH GIÁ & CHẨN ĐOÁN ====  -->
                                                    <StackPanel Margin="0,0,0,16">
                                                        <!--  Tiêu đề section  -->
                                                        <TextBlock
                                                            Margin="0,0,0,8"
                                                            FontSize="16"
                                                            FontWeight="SemiBold">
                                                            <Run Text="{Binding DanhGiaVaChanDoan.Stt}" />
                                                            <Run Text=" - " />
                                                            <Run Text="{Binding DanhGiaVaChanDoan.TenHangMucKiemTra}" />
                                                        </TextBlock>

                                                        <!--  Header của bảng  -->
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="30" />
                                                                <ColumnDefinition Width="3*" />
                                                                <ColumnDefinition Width="1.5*" />
                                                                <ColumnDefinition Width="2*" />
                                                                <ColumnDefinition Width="3*" />
                                                                <ColumnDefinition Width="3*" />
                                                            </Grid.ColumnDefinitions>

                                                            <Border Grid.Column="0" Style="{StaticResource HeaderCell}">
                                                                <TextBlock FontWeight="Bold" Text="#" />
                                                            </Border>
                                                            <Border Grid.Column="1" Style="{StaticResource HeaderCell}">
                                                                <TextBlock FontWeight="Bold" Text="Yêu cầu đạt được" />
                                                            </Border>
                                                            <Border Grid.Column="2" Style="{StaticResource HeaderCell}">
                                                                <TextBlock
                                                                    HorizontalAlignment="Center"
                                                                    FontWeight="Bold"
                                                                    Text="Đạt" />
                                                            </Border>
                                                            <Border Grid.Column="3" Style="{StaticResource HeaderCell}">
                                                                <TextBlock
                                                                    HorizontalAlignment="Center"
                                                                    FontWeight="Bold"
                                                                    Text="Không đạt" />
                                                            </Border>
                                                            <Border Grid.Column="4" Style="{StaticResource HeaderCell}">
                                                                <TextBlock
                                                                    HorizontalAlignment="Center"
                                                                    FontWeight="Bold"
                                                                    Text="Không áp dụng" />
                                                            </Border>
                                                            <Border Grid.Column="5" Style="{StaticResource HeaderCell}">
                                                                <TextBlock FontWeight="Bold" Text="Lý do không đạt" />
                                                            </Border>
                                                        </Grid>

                                                        <!--  Danh sách hàng  -->
                                                        <ItemsControl ItemsSource="{Binding DanhGiaVaChanDoan.DanhSachNoiDung}">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel>
                                                                        <!--  Tên nội dung  -->
                                                                        <TextBlock
                                                                            Margin="0,8,0,4"
                                                                            FontWeight="SemiBold"
                                                                            Foreground="{DynamicResource MaterialDesignBodySecondaryBrush}"
                                                                            Text="{Binding TenNoiDungKiemTra}" />

                                                                        <!--  Các tiêu chí của nội dung  -->
                                                                        <ItemsControl ItemTemplate="{StaticResource TieuChiRowTemplate}" ItemsSource="{Binding DanhSachTieuChi}" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>

                                                    <!--  ==== Điều trị ====  -->
                                                    <StackPanel Margin="0,0,0,16">
                                                        <!--  Tiêu đề section  -->
                                                        <TextBlock
                                                            Margin="0,0,0,8"
                                                            FontSize="16"
