<UserControl
    x:Class="TomTatBenhAn_WPF.View.PageView.KiemTraPhacDoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TomTatBenhAn_WPF.View.PageView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="ModernCard" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="8" />
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4" />
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2f84d0" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#424242" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>

        <Style
            x:Key="ActionButton"
            BasedOn="{StaticResource MaterialDesignRaisedButton}"
            TargetType="Button">
            <Setter Property="Height" Value="36" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>

        <Style x:Key="InfoCard" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2" />
        </Style>
    </UserControl.Resources>

    <ScrollViewer Background="#F5F5F5" VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header Section  -->
            <materialDesign:Card
                Grid.Row="0"
                Background="White"
                Style="{StaticResource ModernCard}">
                <StackPanel Margin="24,20">
                    <TextBlock Style="{StaticResource HeaderStyle}" Text="KIỂM TRA TUÂN THỦ PHÁC ĐỒ ĐIỀU TRỊ" />
                    <TextBlock
                        FontSize="14"
                        Foreground="Gray"
                        Text="Đánh giá việc tuân thủ phác đồ điều trị của bệnh nhân theo các tiêu chí đã định sẵn"
                        TextWrapping="Wrap" />
                </StackPanel>
            </materialDesign:Card>

            <!--  Patient Search Section  -->
            <materialDesign:Card
                Grid.Row="1"
                Background="White"
                Style="{StaticResource ModernCard}">
                <StackPanel Margin="24,20">
                    <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Kiểm tra bệnh nhân theo số bệnh án" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Patient Search  -->
                        <TextBox
                            x:Name="SoBenhAnInput"
                            Grid.Column="0"
                            Margin="0,0,16,0"
                            materialDesign:HintAssist.Hint="Nhập số bệnh án để kiểm tra phác đồ điều trị"
                            materialDesign:HintAssist.IsFloating="True"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            FontSize="16"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding KiemTraBenhNhanCommand}">
                                    <KeyBinding.CommandParameter>
                                        <Binding ElementName="SoBenhAnInput" Path="Text" />
                                    </KeyBinding.CommandParameter>
                                </KeyBinding>
                            </TextBox.InputBindings>
                        </TextBox>

                        <Button
                            Grid.Column="1"
                            Background="#2196F3"
                            Command="{Binding KiemTraBenhNhanCommand}"
                            CommandParameter="{Binding Text, ElementName=SoBenhAnInput}"
                            Style="{StaticResource ActionButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    Kind="Magnify" />
                                <TextBlock Text="Kiểm tra" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!--  Patient Info Section  -->
            <materialDesign:Card
                Grid.Row="2"
                Background="White"
                Style="{StaticResource ModernCard}">
                <StackPanel Margin="24,20">
                    <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Thông tin chi tiết" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Patient Info Cards  -->
                        <materialDesign:Card
                            Grid.Row="0"
                            Grid.Column="0"
                            Background="#E3F2FD"
                            Style="{StaticResource InfoCard}">
                            <StackPanel>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="Tên bệnh nhân" />
                                <TextBlock FontSize="16" FontWeight="Medium" />
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card
                            Grid.Row="0"
                            Grid.Column="1"
                            Background="#F3E5F5"
                            Style="{StaticResource InfoCard}">
                            <StackPanel>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="Giới tính / Tuổi" />
                                <TextBlock FontSize="16" FontWeight="Medium" />
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card
                            Grid.Row="0"
                            Grid.Column="2"
                            Background="#E8F5E8"
                            Style="{StaticResource InfoCard}">
                            <StackPanel>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="Số bệnh án" />
                                <TextBlock FontSize="16" FontWeight="Medium" />
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card
                            Grid.Row="1"
                            Grid.Column="0"
                            Background="#FFF3E0"
                            Style="{StaticResource InfoCard}">
                            <StackPanel>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="Ngày vào viện" />
                                <TextBlock FontSize="16" FontWeight="Medium" />
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card
                            Grid.Row="1"
                            Grid.Column="1"
                            Background="#FCE4EC"
                            Style="{StaticResource InfoCard}">
                            <StackPanel>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="Ngày ra viện" />
                                <TextBlock FontSize="16" FontWeight="Medium" />
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card
                            Grid.Row="1"
                            Grid.Column="2"
                            Background="#F1F8E9"
                            Style="{StaticResource InfoCard}">
                            <StackPanel>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="Chẩn đoán" />
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="Medium"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </materialDesign:Card>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!--  Available Protocol Section  -->
            <materialDesign:Card
                Grid.Row="3"
                Background="White"
                Style="{StaticResource ModernCard}"
                Visibility="{Binding HasPhacDoList, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Margin="24,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource SectionHeaderStyle}"
                            Text="Phác đồ phù hợp" />

                        <Button
                            Grid.Column="1"
                            Background="#4CAF50"
                            Command="{Binding RefreshPhacDoCommand}"
                            Style="{StaticResource ActionButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    Kind="Refresh" />
                                <TextBlock Text="Làm mới" />
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!--  Protocol List  -->
                    <ItemsControl Margin="0,16,0,0" ItemsSource="{Binding PhacDoList}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card
                                    Margin="0,4"
                                    materialDesign:ElevationAssist.Elevation="Dp1"
                                    Background="#FAFAFA">
                                    <Grid Margin="16,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="#2f84d0"
                                                Text="{Binding TenPhacDo}" />
                                            <TextBlock
                                                Margin="0,4,0,0"
                                                FontSize="14"
                                                Foreground="Gray"
                                                Text="{Binding MoTa}"
                                                TextWrapping="Wrap" />
                                            <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                                                <materialDesign:Chip
                                                    Margin="0,0,8,0"
                                                    Background="#E1F5FE"
                                                    Content="{Binding MaICD}"
                                                    FontSize="12"
                                                    Foreground="#0277BD" />
                                                <materialDesign:Chip
                                                    Background="#F3E5F5"
                                                    Content="{Binding TenKhoa}"
                                                    FontSize="12"
                                                    Foreground="#7B1FA2" />
                                            </StackPanel>
                                        </StackPanel>

                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="16,0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Foreground="#4CAF50"
                                            Text="{Binding TyLePhongHop, StringFormat='Độ phù hợp: {0}%'}" />

                                        <Button
                                            Grid.Column="2"
                                            Background="#FF9800"
                                            Command="{Binding DataContext.EvaluatePhacDoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignRaisedButton}">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon
                                                    Margin="0,0,8,0"
                                                    VerticalAlignment="Center"
                                                    Kind="CheckboxMarked" />
                                                <TextBlock Text="Đánh giá" />
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </materialDesign:Card>

            <!--  Evaluation Results Section  -->
            <materialDesign:Card
                Grid.Row="4"
                Background="White"
                Style="{StaticResource ModernCard}"
                Visibility="{Binding HasEvaluationResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Margin="24,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource SectionHeaderStyle}"
                            Text="Kết quả đánh giá" />

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button
                                Background="#2196F3"
                                Command="{Binding ExportResultCommand}"
                                Style="{StaticResource ActionButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"
                                        Kind="FileExport" />
                                    <TextBlock Text="Xuất báo cáo" />
                                </StackPanel>
                            </Button>

                            <Button
                                Background="#4CAF50"
                                Command="{Binding SaveResultCommand}"
                                Style="{StaticResource ActionButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"
                                        Kind="ContentSave" />
                                    <TextBlock Text="Lưu kết quả" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!--  Detailed Results  -->
                    <DataGrid
                        materialDesign:DataGridAssist.CellPadding="8"
                        materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        FontSize="14"
                        GridLinesVisibility="Horizontal"
                        HeadersVisibility="Column"
                        ItemsSource="{Binding EvaluationResults}">

                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                MinWidth="200"
                                Binding="{Binding TenTieuChi}"
                                Header="Tiêu chí"
                                IsReadOnly="True" />

                            <DataGridTextColumn
                                Width="200"
                                Binding="{Binding TenPhacDo}"
                                Header="Phác đồ"
                                IsReadOnly="True" />

                            <DataGridTemplateColumn Width="120" Header="Kết quả">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border
                                            Padding="8,4"
                                            Background="{Binding KetQua, Converter={StaticResource ResultToColorConverter}}"
                                            CornerRadius="12">
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                <materialDesign:PackIcon
                                                    Width="16"
                                                    Height="16"
                                                    Margin="0,0,4,0"
                                                    Foreground="White"
                                                    Kind="{Binding KetQua, Converter={StaticResource ResultToIconConverter}}" />
                                                <TextBlock
                                                    FontSize="12"
                                                    FontWeight="Medium"
                                                    Foreground="White"
                                                    Text="{Binding KetQua}" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding DiemSo}"
                                Header="Điểm số"
                                IsReadOnly="True" />

                            <DataGridTextColumn
                                Width="250"
                                Binding="{Binding GhiChu}"
                                Header="Ghi chú"
                                IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!--  Empty State when no patient selected  -->
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding HasNoPatient, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <materialDesign:PackIcon
                            Width="64"
                            Height="64"
                            Margin="0,0,0,16"
                            HorizontalAlignment="Center"
                            Foreground="Gray"
                            Kind="AccountSearch" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="18"
                            Foreground="Gray"
                            Text="Chưa chọn bệnh nhân" />
                        <TextBlock
                            Margin="0,8,0,0"
                            HorizontalAlignment="Center"
                            FontSize="14"
                            Foreground="Gray"
                            Text="Hãy nhập số bệnh án để bắt đầu đánh giá" />
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <!--  Loading Overlay  -->
            <Border
                Grid.RowSpan="5"
                d:Visibility="Hidden"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar
                            Width="50"
                            Height="50"
                            IsIndeterminate="True"
                            Style="{StaticResource MaterialDesignCircularProgressBar}" />
                        <TextBlock
                            Margin="0,16,0,0"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            Foreground="White"
                            Text="Đang xử lý..." />
                    </StackPanel>
                </Grid>
            </Border>


        </Grid>
    </ScrollViewer>
</UserControl>
