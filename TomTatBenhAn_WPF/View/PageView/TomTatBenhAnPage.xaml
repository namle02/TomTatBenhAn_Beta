<UserControl
    x:Class="TomTatBenhAn_WPF.View.PageView.TomTatBenhAnPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:TomTatBenhAn_WPF.View.ControlView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TomTatBenhAn_WPF.View.PageView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>

        <!--  SIDEBAR  -->
        <control:Sidebar Grid.Column="0" DataContext="{Binding SideBarVM}" />

        <!--  CONTENT  -->
        <control:Content Grid.Column="1" DataContext="{Binding ContentVM}" />
    </Grid>
</UserControl>
