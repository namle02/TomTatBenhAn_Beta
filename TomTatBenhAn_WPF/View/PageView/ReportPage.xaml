<Window
    x:Class="TomTatBenhAn_WPF.View.PageView.ReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:TomTatBenhAn_WPF.Behaviors"
    xmlns:conveter="clr-namespace:TomTatBenhAn_WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TomTatBenhAn_WPF.View.ControlView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="Báo cáo"
    Width="1000"
    Height="800"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <conveter:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Loading indicator  -->
        <ProgressBar
            Grid.Row="0"
            Height="4"
            IsIndeterminate="{Binding IsLoading}"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <!--  WebView with HTML content binding  -->
        <wv2:WebView2
            x:Name="ReportView"
            Grid.Row="1"
            behaviors:WebViewHtmlBehavior.HtmlContent="{Binding HtmlContent}" />
    </Grid>
</Window>
