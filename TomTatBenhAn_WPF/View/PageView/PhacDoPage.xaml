<UserControl
    x:Class="TomTatBenhAn_WPF.View.PageView.PhacDoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlView="clr-namespace:TomTatBenhAn_WPF.View.ControlView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dto="clr-namespace:TomTatBenhAn_WPF.Repos.Dto"
    xmlns:local="clr-namespace:TomTatBenhAn_WPF.View.PageView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1000"
    d:DesignWidth="1000"
    Background="White"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Template hiển thị chi tiết phác đồ  -->
        <DataTemplate x:Key="PhacDoDetailTemplate" DataType="{x:Type dto:PhacDoItemDTO}">
            <StackPanel Margin="10">
                <!--  Header thông tin phác đồ  -->
                <Border
                    Margin="0,0,0,10"
                    Padding="15"
                    Background="#F5F5F5"
                    CornerRadius="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#2196F3"
                            Text="{Binding Protocol.Name}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="0,5,0,0"
                            FontSize="14"
                            Foreground="#666"
                            Text="{Binding Protocol.Code, StringFormat='Mã phác đồ: {0}'}"
                            Visibility="{Binding Protocol.Code, Converter={StaticResource StringToVisibilityConverter}}" />

                        <TextBlock
                            Grid.Row="2"
                            Margin="0,5,0,0"
                            FontSize="12"
                            Foreground="#888"
                            Text="{Binding CreatedAt, StringFormat='Ngày tạo: {0:dd/MM/yyyy HH:mm}'}" />

                        <TextBlock
                            Grid.Row="3"
                            Margin="0,5,0,0"
                            FontSize="12"
                            Foreground="#888"
                            Text="{Binding Protocol.Source, StringFormat='Nguồn: {0}'}"
                            Visibility="{Binding Protocol.Source, Converter={StaticResource StringToVisibilityConverter}}" />
                    </Grid>
                </Border>

                <!--  Nội dung phác đồ  -->
                <ItemsControl ItemsSource="{Binding Protocol.Sections}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type dto:SectionDTO}">
                            <controlView:SectionView DataContext="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <materialDesign:Card>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button
                Width="150"
                Margin="5"
                HorizontalAlignment="Left"
                Command="{Binding ChangePageCommand}">
                <Button.Content>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="Quay về" />
                        <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowULeftBottomBold" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <TabControl
                Grid.Row="1"
                materialDesign:ColorZoneAssist.Mode="Standard"
                materialDesign:ElevationAssist.Elevation="Dp0"
                Style="{StaticResource MaterialDesignNavigationRailTabControl}">

                <!--  Đánh giá tuân thủ phác đồ  -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="auto" Height="auto">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                Kind="CheckBold" />
                            <TextBlock HorizontalAlignment="Center" Text="Đánh giá" />
                        </StackPanel>
                    </TabItem.Header>
                    <ScrollViewer>
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Group hiển thị thông tin bệnh nhân  -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBox
                                    Margin="10"
                                    materialDesign:HintAssist.Hint="Tên bệnh nhân"
                                    materialDesign:HintAssist.IsFloating="True"
                                    AcceptsReturn="True"
                                    FontSize="16"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Text="{Binding PatientInfo.TenBenhNhan, Mode=TwoWay}" />
                                <TextBox
                                    Grid.Column="1"
                                    Margin="10"
                                    materialDesign:HintAssist.Hint="Số bệnh án"
                                    materialDesign:HintAssist.IsFloating="True"
                                    AcceptsReturn="True"
                                    FontSize="16"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Text="{Binding PatientInfo.TenBenhNhan, Mode=TwoWay}" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Margin="10"
                                    materialDesign:HintAssist.Hint="Chẩn đoán ICD"
                                    materialDesign:HintAssist.IsFloating="True"
                                    AcceptsReturn="True"
                                    FontSize="16"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Text="{Binding PatientInfo.TenBenhNhan, Mode=TwoWay}" />
                            </Grid>

                            <!--  Bảng hiển thị danh sách phác đồ điều trị phù hợp với bệnh nhân  -->
                            <StackPanel
                                Grid.Row="1"
                                Margin="10"
                                Orientation="Vertical">
                                <TextBlock
                                    Margin="0,0,0,10"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Text="Danh sách phác đồ điều trị phù hợp với bệnh nhân" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Height="350"
                                        BorderBrush="Black"
                                        BorderThickness="0.5">
                                        <ScrollViewer>
                                            <ListView ItemsSource="{Binding CompatiblePhacDoList}">
                                                <ListView.ItemContainerStyle>
                                                    <Style TargetType="ListViewItem">
                                                        <Setter Property="BorderBrush" Value="Black" />
                                                        <Setter Property="BorderThickness" Value="0,0,0,0.5" />
                                                        <Setter Property="Margin" Value="0" />
                                                        <Setter Property="Padding" Value="0" />
                                                    </Style>
                                                </ListView.ItemContainerStyle>
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="10,5">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="auto" />
                                                                <RowDefinition Height="auto" />
                                                            </Grid.RowDefinitions>
                                                            <TextBlock
                                                                Grid.Row="0"
                                                                VerticalAlignment="Center"
                                                                FontSize="16"
                                                                FontWeight="SemiBold"
                                                                Text="{Binding Protocol.Name}"
                                                                TextWrapping="Wrap" />
                                                            <TextBlock
                                                                Grid.Row="1"
                                                                Margin="0,2,0,0"
                                                                FontSize="12"
                                                                Foreground="#666"
                                                                Text="{Binding Protocol.Code, StringFormat='Mã: {0}'}"
                                                                Visibility="{Binding Protocol.Code, Converter={StaticResource StringToVisibilityConverter}}" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </ScrollViewer>
                                    </Border>

                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="10,0"
                                        Orientation="Vertical">
                                        <Button
                                            Width="150"
                                            Margin="0,0,0,10"
                                            Content="Thêm phác đồ"
                                            Style="{StaticResource MaterialDesignRaisedButton}" />
                                        <Button
                                            Width="150"
                                            Margin="0,10"
                                            Content="Đánh giá tuân thủ"
                                            Style="{StaticResource MaterialDesignRaisedButton}" />

                                    </StackPanel>
                                </Grid>



                            </StackPanel>

                            <!--  Bảng đánh giá tuân thủ quy trình phác đồ  -->
                            <StackPanel
                                Grid.Row="2"
                                Margin="10"
                                Orientation="Vertical">
                                <TextBlock
                                    Margin="0,0,0,10"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Text="Danh sách bảng đánh giá tuân thủ phác đồ điều trị" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Height="350"
                                        BorderBrush="Black"
                                        BorderThickness="0.5">
                                        <ScrollViewer>
                                            <ListView ItemsSource="{Binding BangKiemList}">
                                                <ListView.ItemContainerStyle>
                                                    <Style TargetType="ListViewItem">
                                                        <Setter Property="BorderBrush" Value="Black" />
                                                        <Setter Property="BorderThickness" Value="0,0,0,0.5" />
                                                        <Setter Property="Margin" Value="0" />
                                                        <Setter Property="Padding" Value="0" />
                                                    </Style>
                                                </ListView.ItemContainerStyle>
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Height="40">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <CheckBox Margin="10,0,0,0" IsChecked="{Binding IsChecked}" />
                                                            <TextBlock
                                                                Grid.Column="1"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                FontSize="18"
                                                                Text="{Binding PhacDo}" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>


                                            </ListView>
                                        </ScrollViewer>
                                    </Border>

                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="10,0"
                                        Orientation="Vertical">

                                        <Button
                                            Width="150"
                                            Content="Xuất bảng kiểm"
                                            Style="{StaticResource MaterialDesignRaisedButton}" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>

                </TabItem>

                <!--  Quản lý phác đồ  -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="auto" Height="auto">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                Kind="TextBoxCheckOutline" />
                            <TextBlock HorizontalAlignment="Center" Text="Phác đồ" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  Thanh tìm kiếm và controls  -->
                        <Grid Grid.Row="0" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                Grid.Column="0"
                                materialDesign:HintAssist.Hint="Tìm kiếm phác đồ..."
                                materialDesign:HintAssist.IsFloating="True"
                                FontSize="16"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                            <Button
                                Grid.Column="1"
                                Width="120"
                                Height="45"
                                Margin="10,0"
                                Background="#2196F3"
                                Command="{Binding SearchPhacDoCommand}"
                                Foreground="White">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            Kind="Search" />
                                        <TextBlock FontSize="14" Text="Tìm kiếm" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <Button
                                Grid.Column="2"
                                Width="120"
                                Height="45"
                                Margin="5,0"
                                Background="#4CAF50"
                                Command="{Binding LoadAllPhacDoCommand}"
                                Foreground="White">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            Kind="Refresh" />
                                        <TextBlock FontSize="14" Text="Tải lại" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <ProgressBar
                                Grid.Column="3"
                                Width="30"
                                Height="30"
                                Margin="10,0"
                                IsIndeterminate="True"
                                Style="{StaticResource MaterialDesignCircularProgressBar}"
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </Grid>

                        <!--  Status Message  -->
                        <TextBlock
                            Grid.Row="1"
                            Margin="10,5"
                            FontSize="14"
                            FontStyle="Italic"
                            Foreground="#666"
                            Text="{Binding StatusMessage}"
                            Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}" />

                        <!--  Nội dung chính  -->
                        <Grid Grid.Row="2" Margin="10,5,10,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="400" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Danh sách phác đồ  -->
                            <GroupBox
                                Grid.Column="0"
                                Header="Danh sách phác đồ"
                                Style="{StaticResource MaterialDesignCardGroupBox}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <ListView
                                        Grid.Row="0"
                                        ItemsSource="{Binding PhacDoList}"
                                        SelectedItem="{Binding SelectedPhacDo}"
                                        Style="{StaticResource MaterialDesignListView}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="5">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                    </Grid.RowDefinitions>

                                                    <TextBlock
                                                        Grid.Row="0"
                                                        FontSize="16"
                                                        FontWeight="Bold"
                                                        Text="{Binding Protocol.Name}"
                                                        TextWrapping="Wrap" />

                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Margin="0,2,0,0"
                                                        FontSize="12"
                                                        Foreground="#666"
                                                        Text="{Binding Protocol.Code, StringFormat='Mã: {0}'}"
                                                        Visibility="{Binding Protocol.Code, Converter={StaticResource StringToVisibilityConverter}}" />

                                                    <TextBlock
                                                        Grid.Row="2"
                                                        Margin="0,2,0,0"
                                                        FontSize="11"
                                                        Foreground="#999"
                                                        Text="{Binding CreatedAt, StringFormat='Ngày tạo: {0:dd/MM/yyyy}'}" />
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>

                                    <StackPanel
                                        Grid.Row="1"
                                        Margin="5"
                                        Orientation="Horizontal">
                                        <Button
                                            Width="100"
                                            Margin="0,0,5,0"
                                            Background="#F44336"
                                            Command="{Binding DeletePhacDoCommand}"
                                            CommandParameter="{Binding SelectedPhacDo._id}"
                                            Foreground="White"
                                            IsEnabled="{Binding SelectedPhacDo, Converter={StaticResource NotNullToBooleanConverter}}">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Margin="0,0,5,0" Kind="Delete" />
                                                <TextBlock Text="Xóa" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </GroupBox>

                            <!--  Chi tiết phác đồ  -->
                            <GroupBox
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                Header="Chi tiết phác đồ"
                                Style="{StaticResource MaterialDesignCardGroupBox}">
                                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                    <ContentPresenter Content="{Binding SelectedPhacDo}" ContentTemplate="{StaticResource PhacDoDetailTemplate}" />
                                </ScrollViewer>
                            </GroupBox>
                        </Grid>
                    </Grid>
                </TabItem>

                <!--  Thêm phác đồ mới  -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="auto" Height="auto">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                Kind="PlusCircle" />
                            <TextBlock HorizontalAlignment="Center" Text="Thêm mới" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            FontSize="20"
                            FontWeight="Bold"
                            Text="Thêm phác đồ mới" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="0,5,0,10"
                            FontSize="14"
                            Foreground="#666"
                            Text="Nhập nội dung phác đồ dưới dạng text để hệ thống tự động phân tích và lưu trữ"
                            TextWrapping="Wrap" />

                        <TextBox
                            Grid.Row="2"
                            materialDesign:HintAssist.Hint="Nhập nội dung phác đồ..."
                            AcceptsReturn="True"
                            FontSize="14"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding NewProtocolText, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />

                        <StackPanel
                            Grid.Row="3"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">

                            <CheckBox
                                Margin="0,0,20,0"
                                Content="Ghi đè nếu đã tồn tại"
                                IsChecked="{Binding ForceOverwrite}" />

                            <Button
                                Width="120"
                                Height="45"
                                Margin="0,0,10,0"
                                Background="#4CAF50"
                                Command="{Binding AddNewProtocolCommand}"
                                Foreground="White"
                                IsEnabled="{Binding NewProtocolText, Converter={StaticResource StringNotEmptyToBooleanConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Margin="0,0,5,0" Kind="Plus" />
                                    <TextBlock Text="Thêm phác đồ" />
                                </StackPanel>
                            </Button>

                            <Button
                                Width="100"
                                Height="45"
                                Background="#FF9800"
                                Command="{Binding ClearNewProtocolCommand}"
                                Foreground="White">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Margin="0,0,5,0" Kind="Eraser" />
                                    <TextBlock Text="Xóa hết" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!--  Quản lý bảng kiểm định  -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="auto" Height="auto">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                Kind="ClipboardCheck" />
                            <TextBlock HorizontalAlignment="Center" Text="Bảng kiểm" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <!--  Thanh tìm kiếm  -->
                        <Grid Grid.Row="0" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <ComboBox
                                materialDesign:HintAssist.Hint="Danh sách bảng kiểm"
                                FontSize="18"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                <ComboBoxItem Content="Item 1" />
                                <ComboBoxItem Content="Item 2" />
                                <ComboBoxItem Content="Item 3" />
                            </ComboBox>

                            <Button
                                Grid.Column="1"
                                Width="165"
                                Height="45"
                                Margin="10,0"
                                Background="#2196F3"
                                Foreground="White">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,5,0"
                                            FontSize="16"
                                            Text="Xem bảng kiểm" />
                                        <materialDesign:PackIcon VerticalAlignment="Center" Kind="Search" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </Grid>

                        <TextBlock
                            Grid.Row="1"
                            Margin="10,0,0,10"
                            FontSize="20"
                            FontWeight="Bold"
                            Text="Tùy chỉnh bảng kiểm" />

                        <!--  Tùy chỉnh phác đồ  -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                Margin="10,0,0,0"
                                VerticalAlignment="Stretch"
                                AcceptsReturn="True"
                                FontSize="16"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                            <StackPanel
                                Grid.Column="1"
                                Margin="10,0,20,0"
                                Orientation="Vertical">
                                <Button
                                    Width="165"
                                    Height="45"
                                    Margin="0,0,0,10"
                                    Background="#4CAF50"
                                    Foreground="White">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Margin="0,0,5,0"
                                                FontSize="16"
                                                Text="Thêm bảng " />
                                            <materialDesign:PackIcon VerticalAlignment="Center" Kind="PlusThick" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <Button
                                    Width="160"
                                    Height="45"
                                    Margin="0,0,0,10"
                                    Background="#009688"
                                    Foreground="White">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Margin="0,0,5,0"
                                                FontSize="16"
                                                Text="Lưu bảng kiểm" />
                                            <materialDesign:PackIcon VerticalAlignment="Center" Kind="ContentSaveCheck" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <Button
                                    Width="160"
                                    Height="45"
                                    Margin="0,0,0,10"
                                    Background="#F44336"
                                    Foreground="White">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Margin="0,0,5,0"
                                                FontSize="16"
                                                Text="Xóa bảng kiểm" />
                                            <materialDesign:PackIcon VerticalAlignment="Center" Kind="Delete" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem>

            </TabControl>
        </Grid>

    </materialDesign:Card>

</UserControl>
