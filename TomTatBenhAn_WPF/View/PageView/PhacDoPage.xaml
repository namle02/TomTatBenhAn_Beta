<UserControl
    x:Class="TomTatBenhAn_WPF.View.PageView.PhacDoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlView="clr-namespace:TomTatBenhAn_WPF.View.ControlView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dto="clr-namespace:TomTatBenhAn_WPF.Repos.Dto"
    xmlns:local="clr-namespace:TomTatBenhAn_WPF.View.PageView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="ModernCard" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="8" />
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4" />
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2f84d0" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>

        <Style
            x:Key="ActionButton"
            BasedOn="{StaticResource MaterialDesignRaisedButton}"
            TargetType="Button">
            <Setter Property="Height" Value="36" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header Section  -->
        <materialDesign:Card
            Grid.Row="0"
            Background="White"
            Style="{StaticResource ModernCard}">
            <StackPanel Margin="24,20">
                <TextBlock Style="{StaticResource HeaderStyle}" Text="QUẢN LÝ PHÁC ĐỒ ĐIỀU TRỊ" />
                <TextBlock
                    FontSize="14"
                    Foreground="Gray"
                    Text="Danh sách các phác đồ điều trị được sử dụng trong bệnh viện"
                    TextWrapping="Wrap" />
            </StackPanel>
        </materialDesign:Card>

        <!--  Action Bar  -->
        <materialDesign:Card
            Grid.Row="1"
            Background="White"
            Style="{StaticResource ModernCard}">
            <Grid Margin="24,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Search Box  -->
                <TextBox
                    Grid.Column="0"
                    Margin="0,0,16,0"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="Tìm kiếm phác đồ điều trị..."
                    materialDesign:HintAssist.IsFloating="True"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    FontSize="14"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                <!--  Action Buttons  -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button
                        Background="#4CAF50"
                        Command="{Binding ChangeModalStateCommand}"
                        Style="{StaticResource ActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Kind="Plus" />
                            <TextBlock Text="Thêm mới" />
                        </StackPanel>
                    </Button>

                    <Button
                        Background="#2196F3"
                        Command="{Binding GetAllPhacDoCommand}"
                        Style="{StaticResource ActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Kind="Refresh" />
                            <TextBlock Text="Làm mới" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!--  Data Grid  -->
        <materialDesign:Card
            Grid.Row="2"
            Background="White"
            Style="{StaticResource ModernCard}">
            <Grid Margin="24">
                <DataGrid
                    x:Name="DanhSachPhacDoDataGrid"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    FontSize="14"
                    GridLinesVisibility="Horizontal"
                    ItemsSource="{Binding DanhSachPhacDo}"
                    RowHeight="50"
                    SelectionMode="Single">
                    <DataGrid.Columns>
                        <!--  ID Column  -->
                        <DataGridTextColumn
                            Width="70"
                            Binding="{Binding _id}"
                            Header="ID"
                            IsReadOnly="True">
                            <DataGridTextColumn.HeaderStyle>
                                <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="DataGridColumnHeader">
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="FontSize" Value="14" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <!--  Tên Phác Đồ  -->
                        <DataGridTextColumn
                            Width="*"
                            MinWidth="250"
                            Binding="{Binding Protocol.Name}"
                            Header="Tên Phác Đồ"
                            IsReadOnly="True">
                            <DataGridTextColumn.HeaderStyle>
                                <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="DataGridColumnHeader">
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="FontSize" Value="14" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <!--  Mã ICD  -->
                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding Protocol.Code}"
                            Header="Mã ICD"
                            IsReadOnly="True">
                            <DataGridTextColumn.HeaderStyle>
                                <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="DataGridColumnHeader">
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="FontSize" Value="14" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <!--  Ngày Tạo  -->
                        <DataGridTextColumn
                            Width="120"
                            Binding="{Binding CreatedAt, StringFormat='dd/MM/yyyy'}"
                            Header="Ngày Tạo"
                            IsReadOnly="True">
                            <DataGridTextColumn.HeaderStyle>
                                <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="DataGridColumnHeader">
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="FontSize" Value="14" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <!--  Actions  -->
                        <DataGridTemplateColumn Width="220" Header="Thao Tác">
                            <DataGridTemplateColumn.HeaderStyle>
                                <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="DataGridColumnHeader">
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="FontSize" Value="14" />
                                </Style>
                            </DataGridTemplateColumn.HeaderStyle>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid
                                        Height="50"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <!--  View Button  -->
                                        <Button
                                            Grid.Column="0"
                                            Margin="2"
                                            Command="{Binding DataContext.ViewPhacDoCommand, ElementName=DanhSachPhacDoDataGrid}"
                                            CommandParameter="{Binding _id}"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Xem chi tiết">
                                            <materialDesign:PackIcon Foreground="#2196F3" Kind="Eye" />
                                        </Button>

                                        <!--  Delete Button  -->
                                        <Button
                                            Grid.Column="2"
                                            Margin="2"
                                            Command="{Binding DataContext.DeletePhacDoCommand, ElementName=DanhSachPhacDoDataGrid}"
                                            CommandParameter="{Binding _id}"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Xóa">
                                            <materialDesign:PackIcon Foreground="#F44336" Kind="Delete" />
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <DataGrid.RowStyle>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridRow}" TargetType="DataGridRow">
                            <Setter Property="Height" Value="56" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>

                <!--  Empty State  -->
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding HasNoPhacDo, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <materialDesign:PackIcon
                        Width="64"
                        Height="64"
                        Margin="0,0,0,16"
                        HorizontalAlignment="Center"
                        Foreground="Gray"
                        Kind="MedicalBag" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="18"
                        Foreground="Gray"
                        Text="Chưa có phác đồ điều trị nào" />
                    <TextBlock
                        Margin="0,8,0,24"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Foreground="Gray"
                        Text="Hãy tạo phác đồ điều trị đầu tiên" />
                    <Button
                        Background="#4CAF50"
                        Command="{Binding ChangeModalStateCommand}"
                        Content="Tạo Phác Đồ"
                        Style="{StaticResource MaterialDesignRaisedButton}" />
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!--  Modal Add Phác đồ  -->
        <Border
            Grid.RowSpan="3"
            d:Visibility="Hidden"
            Background="#80000000"
            Visibility="{Binding IsAddPhacDo, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="5*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Padding="20"
                    materialDesign:ShadowAssist.Darken="True"
                    Background="{DynamicResource MaterialDesignPaper}"
                    CornerRadius="12">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0" Margin="0,0,0,12">
                            <TextBlock
                                FontSize="20"
                                FontWeight="SemiBold"
                                Text="Thêm phác đồ" />
                        </DockPanel>

                        <TextBox
                            Grid.Row="3"
                            Height="220"
                            materialDesign:HintAssist.Hint="Nhập nội dung phác đồ"
                            AcceptsReturn="True"
                            FontSize="20"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding PhacDoContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />

                        <StackPanel
                            Grid.Row="4"
                            Margin="0,16,0,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Margin="0,0,8,0"
                                Command="{Binding ChangeModalStateCommand}"
                                Content="Hủy"
                                Style="{StaticResource MaterialDesignOutlinedButton}" />
                            <Button Command="{Binding AddPhacDoCommand}" Content="Đồng ý" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!--  Loading Overlay  -->
        <Border
            Grid.RowSpan="3"
            d:Visibility="Hidden"
            Background="#80000000"
            Visibility="{Binding IsWaiting, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar
                        Width="50"
                        Height="50"
                        IsIndeterminate="True"
                        Style="{StaticResource MaterialDesignCircularProgressBar}" />
                    <TextBlock
                        Margin="0,16,0,0"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Foreground="White"
                        Text="Đang xử lý..." />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Bảng hiển thị phác đồ  -->
        <Border
            Grid.RowSpan="3"
            d:Visibility="Hidden"
            Background="#80000000"
            Visibility="{Binding IsViewPhacDo, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="9*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="9*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Padding="20"
                    materialDesign:ShadowAssist.Darken="True"
                    Background="{DynamicResource MaterialDesignPaper}"
                    CornerRadius="12">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ScrollViewer>
                            <TextBlock FontSize="14" Text="{Binding RawPhacDo.Protocol.raw}" />
                        </ScrollViewer>
                        <StackPanel Grid.Row="1" HorizontalAlignment="Right">
                            <Button
                                Width="100"
                                Command="{Binding ViewPhacDoCommand}"
                                Content="Đóng" />
                        </StackPanel>

                    </Grid>


                </Border>
            </Grid>
        </Border>

    </Grid>
</UserControl>
