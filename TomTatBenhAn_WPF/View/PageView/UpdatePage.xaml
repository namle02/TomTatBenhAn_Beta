<UserControl x:Class="TomTatBenhAn_WPF.View.PageView.UpdatePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,20" Padding="24">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <materialDesign:PackIcon Kind="Update" 
                                           Width="32" Height="32"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="Cập nhật phần mềm" 
                             FontSize="24" FontWeight="Bold"
                             VerticalAlignment="Center" Margin="12,0,0,0"/>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,40,0">
                        <TextBlock Text="Phiên bản hiện tại" 
                                 FontSize="14" Foreground="Gray" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding CurrentVersion, StringFormat='v{0}'}" 
                                 FontSize="20" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" 
                              Visibility="{Binding HasUpdate, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="Phiên bản mới nhất" 
                                 FontSize="14" Foreground="Green" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding LatestVersion, StringFormat='v{0}'}" 
                                 FontSize="20" FontWeight="Bold" Foreground="Green"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <!-- Content -->
        <materialDesign:Card Grid.Row="1" Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Status -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <materialDesign:PackIcon Kind="InformationOutline" 
                                           Width="20" Height="20"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                             FontSize="16" 
                             VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Progress Bar -->
                <ProgressBar Grid.Row="1" 
                           Height="8" Margin="0,0,0,20"
                           Value="{Binding DownloadProgress}"
                           Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVis}}"/>

                <!-- Release Notes -->
                <GroupBox Grid.Row="2" Header="Nội dung cập nhật" 
                         Margin="0,0,0,20"
                         Visibility="{Binding HasUpdate, Converter={StaticResource BoolToVis}}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                        <TextBlock Text="{Binding ReleaseNotes}" 
                                 TextWrapping="Wrap" 
                                 Padding="10"/>
                    </ScrollViewer>
                </GroupBox>

                <!-- Buttons -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding CheckForUpdatesCommand}"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          Width="160" Height="40" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" 
                                                   Width="16" Height="16"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Kiểm tra cập nhật" 
                                     VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding DownloadAndInstallCommand}"
                          Style="{StaticResource MaterialDesignRaisedButton}"
                          Width="160" Height="40" Margin="0,0,10,0"
                          Visibility="{Binding HasUpdate, Converter={StaticResource BoolToVis}}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Download" 
                                                   Width="16" Height="16"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Cập nhật ngay" 
                                     VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Click="CloseButton_Click"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          Width="120" Height="40">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Close" 
                                                   Width="16" Height="16"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Đóng" 
                                     VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>

