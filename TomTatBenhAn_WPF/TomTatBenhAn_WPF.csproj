  </ItemGroup>

  <!-- Sử dụng PackageReference thay vì COMReference để tương thích với .NET Core MSBuild -->
  <!-- COMReference không được hỗ trợ trong .NET Core MSBuild khi publish với RuntimeIdentifier -->

  <ItemGroup>
    <EmbeddedResource Include="Promt\KetQuaXNPromt.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Promt\QuaTrinhBenhLyPromt.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Promt\TinhTrangNguoiBenhRaVienPromt.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="SqlScripts\BenhAnType\BenhAnNgoaiKhoa.sql" />
  </ItemGroup>

  <ItemGroup>
