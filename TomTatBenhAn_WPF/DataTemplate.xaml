<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:TomTatBenhAn_WPF.Converters"
    xmlns:dto="clr-namespace:TomTatBenhAn_WPF.Repos.Dto"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:page="clr-namespace:TomTatBenhAn_WPF.View.PageView"
    xmlns:pageVM="clr-namespace:TomTatBenhAn_WPF.ViewModel.PageViewModel">

    <!--  Global Converters  -->
    <converters:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <converters:ResultToColorConverter x:Key="ResultToColorConverter" />
    <converters:ResultToIconConverter x:Key="ResultToIconConverter" />
    <converters:StatusToColorConverter x:Key="StatusToColorConverter" />

    <DataTemplate DataType="{x:Type pageVM:TomTatBenhAnVM}">
        <page:TomTatBenhAnPage />
    </DataTemplate>

    <DataTemplate DataType="{x:Type pageVM:PhacDoVM}">
        <page:PhacDoPage />
    </DataTemplate>

    <DataTemplate DataType="{x:Type pageVM:BangKiemVM}">
        <page:BangKiemPage />
    </DataTemplate>

    <DataTemplate DataType="{x:Type pageVM:DashBoardVM}">
        <page:DashboardPage />
    </DataTemplate>

    <DataTemplate DataType="{x:Type pageVM:KiemTraPhacDoVM}">
        <page:KiemTraPhacDoPage />
    </DataTemplate>

</ResourceDictionary>